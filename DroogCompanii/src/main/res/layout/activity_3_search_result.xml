<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout" >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_dialog_map"
        android:id="@+id/showSearchResultOnMap" />

    <fragment
        android:name="ru.droogcompanii.application.ui.fragment.search_result_fragment.SearchResultFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/showSearchResultOnMap"
        android:id="@+id/searchResultFragment" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/taskFragmentContainer" />

</RelativeLayout>