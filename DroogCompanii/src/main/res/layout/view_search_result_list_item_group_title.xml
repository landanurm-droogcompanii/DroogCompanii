<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="@dimen/horizontalPaddingOfSearchResultListItem"
    android:layout_marginRight="@dimen/horizontalPaddingOfSearchResultListItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/textSizeOfSearchResultListGroupTitle"
        android:singleLine="true"
        android:textColor="@color/textColorOfSearchResultListItemGroupTitle"
        android:textStyle="bold"
        android:minHeight="@dimen/minHeightOfGroupTitleOfSearchResultListItem"
        android:id="@+id/title" />

</RelativeLayout>