<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="@dimen/horizontalPaddingOfSearchResultListItem"
    android:layout_marginRight="@dimen/horizontalPaddingOfSearchResultListItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/textSizeOfSearchResultListItemPrimary"
        android:singleLine="true"
        android:textColor="@color/textColorOfPartnersCounterSearchResultListItem"
        android:background="@color/backgroundOfPartnersCounterSearchResultListItem"
        android:minWidth="@dimen/minWidthOfPartnersCounterSearchResultListItem"
        android:gravity="center_horizontal"
        android:id="@+id/counter" />

    <TextView
        android:layout_width="@dimen/spaceBetweenCategoryTitleAndCounter"
        android:layout_height="1dp"
        android:layout_toLeftOf="@id/counter"
        android:id="@+id/divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/divider"
        android:layout_centerVertical="true"
        android:textSize="@dimen/textSizeOfSearchResultListItemSecondary"
        android:singleLine="true"
        android:textColor="@color/primaryTextColorOfSearchResultListItem"
        android:id="@+id/title" />

</RelativeLayout>