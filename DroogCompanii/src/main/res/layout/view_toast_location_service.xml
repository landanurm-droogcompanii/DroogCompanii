<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:background="@color/backgroundOfToastLocationService" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textColorOfToastLocationService"
            android:textSize="@dimen/textSizeOfToastLocationService"
            android:text="@string/textToastLocationService" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:src="@color/colorOfDividerToastLocationService"/>

        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:src="@android:drawable/ic_menu_mylocation"
            android:id="@+id/buttonLocation" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:src="@color/colorOfDividerToastLocationService"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:focusable="false"
        android:text="@string/textDoNotShowAgain"
        android:textColor="@color/textColorOfToastLocationService"
        android:textSize="@dimen/textSizeOfToastLocationService"
        android:id="@+id/checkBoxDoNotShowAgain" />

</LinearLayout>